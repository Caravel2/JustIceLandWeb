<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="/js/kit/angular.min.js"></script>
            <!--載入google map-->
        <script type="text/javascript"
                src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBkzBut_maXdkAsr_SpLlBtuKdEoVT_em0&libraries=visualization">
        </script>
        <script src="/js/angularJs/GameEnviroment/serGoogleMapLoaderPromise.js"></script>
        <script src="/js/angularJs/GameEnviroment/serProtagonist.js"></script>
        <script src="/js/angularJs/GameEnviroment/dirGoogleMap.js"></script>
        <script src="/js/angularJs/GameEnviroment/dirProtagonist.js"></script>
        <script src="/js/angularJs/GameEnviroment/ctrlGame.js"></script>
        <style type="text/css">
            html, body{
                height: 100%;
                margin: 0;
                padding: 0;
            }

            #gamePanel{
                height: 100%;
                width: 100%;
            }

            #gmaps {
                height: 100%;
                /*width: 100%;*/
                /*height: 450px;*/
            }

            .textPanel {
                position: absolute;
                top: 20%;
            }

            #protagonist img{
                height: auto;
                width: 70px;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: rotate(0deg);
            }

            #helmet {
                position: absolute;
                z-index: 99;
                opacity: 0.3;
            }

            #InfoWindow {
                height: 200px;
                width: 250px;
            }


        </style>
    </head>

    <body ng-app="GameEnviroment">

        <div id="gamePanel" ng-controller = "ctrlGame as mainCtrl">    
            <!-- <img id="helmet" src="/img/head-house-of-cards-francis-underwood.png" alt="">      -->
            <div id="gmaps" dir-google-map change-zoom-info="mainCtrl.changeZoomInfo(zoomInfo)" trigger-kinematics-frame="mainCtrl.triggerKinematicsFrame(who,keyCode)" show-altitude="mainCtrl.showAltitude(altitude)"></div>
            <div id="protagonist" dir-protagonist moving-map-center="mainCtrl.movingMapCenter(displacement)"><img src="/img/IronManOverLook@1x.png" alt="" /></div>
            <div class="textPanel">
                <span ng-bind="mainCtrl.zoomInfo"></span>
                <span ng-bind="mainCtrl.altitude"></span>
            </div>
        </div>


    </body>
</html>
